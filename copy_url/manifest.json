{
  "manifest_version": 3,
  "name": "Copy URL as",
  "version": "1.0",
  "description": "Copy URL as formatted link from current tab",
  "background": { "service_worker": "background.js" },
  "action": {
    "default_icon": "icon-128.png",
    "default_title": "Copy URL as"
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "permissions": [
    "contextMenus",
    "scripting",
    "tabs",
    "notifications",
    "storage"
  ],
  "host_permissions": ["<all_urls>"],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
